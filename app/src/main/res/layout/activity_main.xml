<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/main_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp">
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_1"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="20dp"/>
                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_2"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/main_home_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_ll"
                android:text="@string/main_home"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>
            <View
                android:id="@+id/main_home_v"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#454545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_home_tv"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>

            <HorizontalScrollView
                android:id="@+id/main_hv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_sv_cl1"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:id="@+id/main_sv_cl1_tv1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="#세계 고양이의 날"
                            android:textColor="@color/main_gray"/>
                        <TextView
                            android:id="@+id/main_sv_cl1_tv2"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl1_tv1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘은 나의 날이다냥"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/main_sv_cl1_tv3"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl1_tv2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="이걸 본 당신, 랜선 집사로 간택되었습니다"
                            android:textColor="@color/main_gray"/>

                        <ImageView
                            android:id="@+id/main_sv_cl1_iv"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl1_tv3"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new_2"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_sv_cl2"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:id="@+id/main_sv_cl2_tv1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="새로 올라왔어요"
                            android:textColor="@color/main_gray"/>
                        <TextView
                            android:id="@+id/main_sv_cl2_tv2"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl2_tv1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8월 1주 신작"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/main_sv_cl2_tv3"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl2_tv2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="씽, 심야 괴담회, 딩대, 핸콕 등"
                            android:textColor="@color/main_gray"/>

                        <ImageView
                            android:id="@+id/main_sv_cl2_iv"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl2_tv3"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new_1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_sv_cl3"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:id="@+id/main_sv_cl3_tv1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="공개 예정"
                            android:textColor="@color/main_gray"/>
                        <TextView
                            android:id="@+id/main_sv_cl3_tv2"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl3_tv1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="퍼스트 레이디"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/main_sv_cl3_tv3"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl3_tv2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="질리언 앤더슨, '엘리너 루스벨트'의 품위를 담다"
                            android:textColor="@color/main_gray"/>

                        <ImageView
                            android:id="@+id/main_sv_cl3_iv"
                            app:layout_constraintTop_toBottomOf="@id/main_sv_cl3_tv3"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new_3"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/main_tab_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_hv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="@string/main_home_tab_all"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@drawable/bg_main_tab_on"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_main_tab_off"
                    android:gravity="center"
                    android:text="@string/main_home_tab_movie"
                    android:textColor="@color/main_tab_gray"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_main_tab_off"
                    android:gravity="center"
                    android:text="@string/main_home_tab_tv"
                    android:textColor="@color/main_tab_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/main_new_ep_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_tab_ll"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/main_new_ep"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/main_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_tab_ll"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/main_more"
                android:textColor="@color/main_tab_gray"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <HorizontalScrollView
                android:id="@+id/main_new_ep_hv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_new_ep_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img1"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img2"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img3"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img4"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/main_top_10_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_new_ep_hv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/main_top_10"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/main_more_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_new_ep_hv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/main_more"
                android:textColor="@color/main_tab_gray"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <HorizontalScrollView
                android:id="@+id/main_top_10_hv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_top_10_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img6"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img5"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img4"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img3"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/main_recommend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_top_10_hv"
                android:text="@string/main_recommend"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_recommend_tv"
                android:layout_marginStart="20dp"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/banner1"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/banner2"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/banner1"/>
                </LinearLayout>

            </HorizontalScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>